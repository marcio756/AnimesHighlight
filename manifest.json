{
  "manifest_version": 3,
  "name": "Universal MAL Highlighter",
  "version": "6.0",
  "description": "Destaca animes do MAL em QUALQUER site de streaming.",
  "permissions": ["storage"],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}